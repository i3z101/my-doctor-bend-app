<div class="col-lg-6 col-md-12 col-6 mb-4">
  <div class="card card-statistics">
      <div class="card-body">
        <div class="card-title d-flex align-items-start justify-content-between">
          <div class="avatar flex-shrink-0">
          <% if(image) { %>
            <img
              src="<%= imageSrc %>"
              alt="<%= alt %>"
              class="rounded"
            />
            <% } else { %>
              <i class="menu-icon tf-icons bx bx-md <%= icon %>"></i>
          <% } %>
          </div>
        </div>
        <span class="fw-semibold d-block mb-1"><%= cardTitle %></span>
        <h3 class="card-title mb-2"><%= cardSubTitle %></h3>
      </div>
  </div>
</div>